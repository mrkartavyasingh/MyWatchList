<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="7dp"
    android:layout_marginVertical="7dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/element_item_CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ElementItem.CardView">

        <ImageView
            android:id="@+id/element_image_poster"
            android:layout_width="170dp"
            android:layout_height="240dp"
            android:src="@drawable/placeholder"
            android:contentDescription="@string/element_image"
            android:scaleType="centerCrop">

        </ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/element_name_TextView"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        style="@style/ElementItem.TextView"/>
</LinearLayout>

