<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/advance_search_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp" />

    <Button
        android:id="@+id/advance_search_submit_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blackColor"
        android:text="SEARCH"
        app:layout_constraintEnd_toEndOf="@+id/advance_search_RecyclerView"
        app:layout_constraintTop_toBottomOf="@+id/advance_search_RecyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>