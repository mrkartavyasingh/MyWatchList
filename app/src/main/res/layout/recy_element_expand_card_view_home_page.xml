<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expand_element_HomePage_CardView"
    style="@style/ElementItem.CardView"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_gravity="center"
    android:layout_marginHorizontal="5dp"
    app:cardElevation="0dp">

    <ImageView
        android:id="@+id/expand_element_backdrop_poster_HomePage_ImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/todo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <androidx.cardview.widget.CardView
            style="@style/ElementItem.CardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/expand_element_image_poster_HomePage"
                android:layout_width="100dp"
                android:layout_height="170dp"
                android:contentDescription="@string/element_image"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom|center_horizontal"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/expand_element_name_TextView_HomePage"
                style="@style/Expand.TextView"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/expand_element_overview_TextView_HomePage"
                style="@style/Expand.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="6"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>