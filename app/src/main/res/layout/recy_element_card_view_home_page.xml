<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="3dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/element_item_CardView_HomePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ElementItem.CardView">

        <ImageView
            android:id="@+id/element_image_poster_HomePage"
            android:layout_width="120dp"
            android:layout_height="190dp"
            android:src="@drawable/placeholder"
            android:contentDescription="@string/element_image"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/element_name_TextView_HomePage"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        style="@style/ElementItem.TextView" />
</LinearLayout>

